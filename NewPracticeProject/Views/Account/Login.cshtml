@model NewPracticeProject.Models.ViewModel.LoginSignUpViewModel


<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <div class="text-center">
                <h1 class="text-capitalize">Sign In</h1>
               
                @if (TempData.ContainsKey("NotConfirmedErrorMessage"))
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["NotConfirmedErrorMessage"]
                    </div>
                }

                @if (TempData.ContainsKey("LoginErrorMessage"))
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["LoginErrorMessage"]
                    </div>
                }
            </div>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" id="emailInput" class="form-control" autocomplete="off"  />

                    <span asp-validation-for="Email"  class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success btn-lg mt-4 mb-1 float-rigth" value="Log In" />
                    <a class="text-light btn-lg mt-4 mb-1  btn btn-primary font-weigth-bold" asp-action="SignUp" asp-controller="Account">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

